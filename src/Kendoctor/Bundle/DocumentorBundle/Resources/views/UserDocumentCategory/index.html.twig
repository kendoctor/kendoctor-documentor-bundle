{% extends 'KendoctorDocumentorBundle:Space:spaceLayout.html.twig' %}


{% block body -%}
    <h1>UserDocumentCategory list</h1>

    <table class="records_list table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Lft</th>
                <th>Lvl</th>
                <th>Rgt</th>
                <th>Root</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('userdocumentcategory_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.lft }}</td>
                <td>{{ entity.lvl }}</td>
                <td>{{ entity.rgt }}</td>
                <td>{{ entity.root }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('userdocumentcategory_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('userdocumentcategory_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="btn" href="{{ path('userdocumentcategory_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
