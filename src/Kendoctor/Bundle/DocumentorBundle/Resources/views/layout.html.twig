<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset("css/bootstrap.min.css") }}" media="screen" type="text/css" />  
        <link rel="stylesheet" href="{{ asset("css/kendocumentor.css") }}" media="screen" type="text/css" />       

        <script type="text/javascript" src="{{ asset("js/jquery.js") }}"></script>
        <script src="{{ asset("js/bootstrap.min.js") }}"></script>

    </head>
    <body>
        {% block page %}

            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container-fluid">

                        <a class="brand" href="/de/">Felyhosan</a>

                        <div class="nav-collapse">

                            <ul class="nav pull-right">
                                {% set route_params = app.request.attributes.get('_route_params') %}
                                    <li ><a href="{{ path(app.request.attributes.get('_route'), route_params|merge({'_locale': 'zh'}))}}">Chinese</a></li>
                                    <li><a href="{{ path(app.request.attributes.get('_route'), route_params|merge({'_locale': 'en'}))}}">English</a></li>
                                </ul>
                                <form class="navbar-form pull-right">
                                    <div class="input-append">
                                        <input type="text" class="input-large">
                                        <button type="submit" class="btn">Submit</button>
                                    </div>
                                </form>


                            </div>
                        </div>
                        <div class="container-fluid"> 

                            <ul class="nav">
                                <li class="active"><a href="{{ path('home') }}">Home</a></li>
                                <li><a href="{{ path('home') }}">Products</a></li>
                                <li><a href="{{ path('home') }}">Services</a></li>
                                <li><a href="{{ path('home') }}">About us</a></li>
                            </ul>
                            <ul class="nav pull-right">

                                {% if app.user %}

                                <li>   <a href="{{ path('my_space') }}">{{ app.user.username }}  <i class="icon-user"></i></a>  </li>
                                <li>   <a href="{{ path('fos_user_security_logout') }}">Logout <i class="icon-off"></i></a>  </li>
                                {% else %}
                                        <li>    <a href="{{ path('fos_user_security_login')}}"> Login  <i class="icon-user"></i></a>  </li>
                                        <li>    <a href="{{ path('fos_user_registration_register')}}">Registrieren</a></li>
                                {% endif %}

                                        </ul>
                                    </div>
                                </div></div>

                            <div class="container-fluid">

                                <div id="body" class="row-fluid">     

                    {% block body %}{% endblock %}
                                </div>       
                            </div>
                            <div id="footer"></div>
                        </div>
        {% endblock %}
        {% block javascripts %}{% endblock %}
                    </body>
                </html>